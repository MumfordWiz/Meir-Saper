<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_info"
    tools:context="com.example.david.locktrivia.info">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/exitinfo"
        android:fontFamily="sans-serif-thin"
        android:id="@+id/like"
        android:onClick="getOut"



        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:layout_centerHorizontal="true"


        android:background="@drawable/likebutton"
        android:textColor="@android:color/white"



        />
    <!--android:layout_above="@id/button2"-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:src="@drawable/leftarrow"
        android:id="@+id/leftarrow"

        />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rightarrow"

        android:layout_centerInParent="true"

        android:id="@+id/rightarrow"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Press lock button to activate"
        android:id="@+id/logot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="187dp"
        android:fontFamily="sans-serif-thin"
        android:textSize="20dp"

        />



</RelativeLayout>

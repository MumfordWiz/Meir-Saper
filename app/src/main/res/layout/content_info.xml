<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_info"
    tools:context="com.example.david.locktrivia.info">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/like"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/like"
        android:onClick="getOut"

        android:text="Got it!"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/button2"

        android:background="@drawable/likebutton"
        android:textColor="@color/main1"
        android:textSize="11dp"


        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/like"
        android:layout_centerInParent="true"
        android:src="@drawable/leftarrow"
        android:id="@+id/leftarrow"

        />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rightarrow"
        android:layout_toStartOf="@id/like"
        android:layout_centerInParent="true"
        android:id="@+id/rightarrow"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Press lock button to activate"
        android:id="@+id/logot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="187dp"
        android:fontFamily="sans-serif-thin"
        android:textSize="20dp"

        />



</RelativeLayout>
